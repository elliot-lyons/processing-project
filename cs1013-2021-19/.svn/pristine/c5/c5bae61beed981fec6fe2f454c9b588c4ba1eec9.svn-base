class AboutUs {

  int screen;
  ArrayList widgetList;
  boolean backMp = false;

  Widget Title, Elliot, Vicky, Ali, Ana;

  PFont widgetFont;

  AboutUs (int screen) {
    this.screen = screen;

    widgetFont = loadFont("AgencyFont.vlw");
    textFont(widgetFont);

    widgetList = new ArrayList();

    Title = new Widget (450, 15, 725, 60, "Who are we?", 
      color (255, 255, 255), widgetFont, TITLE);
    Elliot = new Widget (20, 200, 350, 60, "Elliot - lyonse7@tcd.ie", 
      color (255, 255, 255), widgetFont, TITLE);
    Vicky = new Widget (20, 280, 350, 60, "fabijanw@tcd.ie", 
      color (255, 255, 255), widgetFont, TITLE);
    Ali = new Widget (20, 360, 350, 60, "alania@tcd.ie", 
      color (255, 255, 255), widgetFont, TITLE);
    Ana = new Widget (20, 440, 350, 60, "bogosloa@tcd.ie", 
      color (255, 255, 255), widgetFont, TITLE);  

    widgetList.add(Title);
    backMp = false;
  }

  void settings() {
    size(SCREEN_X, SCREEN_Y);
  }

  void draw() {
    image(template, 1, 1);                                 
    template.resize(1800, 900);      //Background
    Title.draw();
    Elliot.draw();
    Vicky.draw();
    Ali.draw();
    Ana.draw();
    backButton(mouseX, mouseY);
    backMp = false;
  }
  void backButton(int mX, int mY)                                        // this is a back button which lets the user return to the previous screen
  {
    if (mX >= BACK_BUTTON_X_ORG && mX <= BACK_BUTTON_X_ORG + BACK_BUTTON_X && mY >= BACK_BUTTON_Y_ORG && mY <= BACK_BUTTON_Y_ORG + BACK_BUTTON_Y) 
    {
      stroke(255);

      if (backMp)
      {  
        backMp = false;
        currentScreen = HOME_SCREEN;
      }
    } else
    {
      stroke(0);
    }

    fill(grey);
    rect(BACK_BUTTON_X_ORG, BACK_BUTTON_Y_ORG, BACK_BUTTON_X, BACK_BUTTON_Y);

    fill(0);
    textFont(ArialBoldItalicMtTwenty);
    textAlign(CENTER, CENTER);
    text("Back", BACK_BUTTON_X_ORG, BACK_BUTTON_Y_ORG, BACK_BUTTON_X, BACK_BUTTON_Y);
    textAlign(LEFT, BOTTOM);
    stroke(0);
    //text("Back", BACK_BUTTON_ORG + 5, BACK_BUTTON_ORG + 20);
  }
}
